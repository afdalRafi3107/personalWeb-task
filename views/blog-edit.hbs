
    <!-- navbar boostrap -->
    {{#> layout currentPage="Blog-add"}}

    <div class="container-lg mt-3 form-input blogAdd" style=" text-align: center;">
      <h2>Edit Blog</h2>

      <form id="blog-add" action="/blog-edit/{{blog.idBlog}}" method="post" class="create-blog form" enctype="multipart/form-data">
        <table style="width:80%; margin:10px auto;">
          <tr>
            <td colspan="2">
              <input name="title" id="title" type="text" class="form-control mb-2" placeholder="Judul" value="{{blog.title}}">
            </td>
          </tr>
          <tr>
            <td colspan="2">
              <textarea name="content" id="content" class="form-control mb-2" placeholder="Content" id="floatingTextarea" style="height: 100px">{{blog.content}}</textarea>
            </td>
          </tr>
          <tr>
            <td colspan="2">
              <p style="text-align: left; margin:0;">Ganti gambar?</p>
              <div class="form-check mb-2" style="text-align: left;">
                <input name="check" id="check" class="form-check-input" type="checkbox" value="1" id="flexCheckDefault" onchange="showInputImage()">
                <label class="form-check-label" for="flexCheckDefault">
                  iya
                </label>
            </td>
          </tr>
          <tr>
            <td colspan="2">
              <input name="image" id="image" type="file" class="form-control mb-2" placeholder="Upload gambar" value="1" style="display: none;">
            </td>
          </tr>
          <tr>
            <td></td>
            <td style="text-align: right;">
              <button type="submit" class="btn btn-primary mt-2">Kirim</button>
            </td>
          </tr>
        </table>
      </form>

    </div>

    <script>
      function showInputImage() {
          // Get the checkbox
          var checkBox = document.getElementById("check");
          // Get the output text
          var image = document.getElementById("image");

          // If the checkbox is checked, display the output text
          if (checkBox.checked == true){
            image.style.display = "block";
          } else {
            image.style.display = "none";
          }
      }
    </script>



  {{/layout }}
  
