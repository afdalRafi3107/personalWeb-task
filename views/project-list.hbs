
    {{#> layout currentPage="Project" }}
    <!-- content -->
    <div class="container-lg mt-3 mb-5 contProject" >
          <div class="" style="text-align: center;">
            <h1>My Project</h1>
          </div>
          <div style="text-align:right;
                      margin: 20px auto;
                      ">
            <form action="" method="post">
            <a class="btn btn-primary text-end" href="/projectAdd">Add Project</a>
            </form>
          </div>
          <hr>

          <!-- bagian konten card -->
        <div class="row">

        {{#each project}}
        <div class="col-md-4 collCard">
         <div class="card coll" style="width: 18rem; ">
            <img src="{{ this.image }}" class="card-img-top" alt="...">
            <div class="card-body">
                <h2>{{this.projectName}}</h2>
                <p>durasi: {{this.totalHari}} hari</p>
              <p class="card-text">{{this.descript}}</p>
              <p style="font-style: italic;">{{this.tech}}</p>
              <div class="tombol align-text-bottom">
              <a href="/projectEdit/{{this.id}}" class="btn">Update</a>
              <form action="/projectList/{{this.id}}?_method=DELETE" method="post" style="display: inline;">
              <button class="btn" onclick="return confirm('hapus?')">Hapus</button>
              </form>
              </div>
            </div>
          </div>
        </div>
        {{/each}}

        </div>
      </div>
      {{/layout}}
