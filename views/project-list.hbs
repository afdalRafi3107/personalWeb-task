
    {{#> layout currentPage="Project" }}
    <!-- content -->
    <div class="container-lg mt-3 mb-5 contProject" >
          <div class="" style="text-align: center;">
            <h1>My Project</h1>
          </div>
          <div style="text-align:right;
                      margin: 20px auto;
                      ">
            {{#if user }}
            <form action="" method="post">
            <a class="btn btn-primary text-end" href="/projectAdd">Add Project</a>
            </form>
            {{/if }}
          </div>
          <hr>

          <!-- bagian konten card -->
        <div class="row">

        {{#each project}}
        <div class="col-md-4 collCard projectCard" >
         <div class="card coll" style="width: 18rem; ">
            <img src="{{this.image}}" class="card-img-top" alt="...">
            <div class="card-body">
                <h2>{{this.projectName}}</h2>
                <p style="text-align: center; font-size:13px; margin:3px 0;">{{this.startAt}} hingga {{this.endAt}}</p>
                <p style="margin: 2px 0;">Durasi: {{this.totalHari}} hari</p>
                <hr style="margin: 2px;">
                <div class="deskripsi">
                  <p class="card-text">{{this.descript}}</p>
                </div>
              <p style="font-style: italic; text-decoration: underline;">{{this.tech}}</p>
              
              {{#if (equal ../user.id this.authorId)}}
              <div class="tombol align-text-bottom">
              <a href="/projectEdit/{{this.id}}" class="btn">Update</a>
              <form id="delete" action="/projectList/{{this.id}}?_method=DELETE" method="post" style="display: inline;">
              <button class="btn btn-danger" onclick="hapus(event)">Hapus</button>
              </form>
              </div>
              {{/if}}
            </div>
          </div>
        </div>
        {{/each}}

        </div>
      </div>

      <script src="asets/javasript/deleteAlert.js">

      </script>

      {{/layout}}
