 {{#> layout currentPage='Blog-detail' }}

<div class="contaier-lg" style="background-color: aqua;">
    
</div>

<div class="container-sm blogDetail">
    <section>
      <article>
        <h1 class="text-center mt-3 mb-3">{{blog.title}}</h1>

        <div class="creator">
        <p style="font-weight: bold;">{{blog.user.name}}</p>
        <p>{{formatDateToWIB blog.createdAt}}</p>
        </div>

        <img src="{{blog.image}}" alt="Blog Image" class="rounded mx-auto d-block mb-3 mt-3"/>

        <p>
          {{blog.content}}
        </p>
      </article>
    </section>
</div>
 {{/layout }}